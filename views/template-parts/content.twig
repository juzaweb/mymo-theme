<div class="row mt-3">
    <div class="col-md-3 col-xs-12 col-sm-12">
        <div class="image">
            <img src="{{ post.thumbnail }}" alt="{{ post.title }}">
        </div>
    </div>

    <div class="col-md-9 col-xs-12 col-sm-12">
        <div class="title">
            <h4><a href="{{ post.url }}">{{ post.title }}</a></h4>
            <p>{{ post.description }}</p>
        </div>
    </div>
</div>