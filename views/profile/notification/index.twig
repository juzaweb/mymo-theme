{% extends 'layouts.frontend' %}

{% block content %}
    <div class="container">
        <div class="row container" id="wrapper">
            <div class="mymo-panel-filter">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-8 hidden-xs">
                            <div class="yoast_breadcrumb"><span>
                            <span>
                                <a href="{{ url('home') }}">{{ __('Home') }}</a> »
                                <a href="{{ url('profile') }}">{{ trans('theme::app.profile') }}</a> »
                                <span class="breadcrumb_last" aria-current="page">{{ __('Notification') }}</span>
                            </span>
                        </span>
                            </div>
                        </div>
                        <div class="col-xs-4 text-right">
                            <a href="javascript:;" id="expand-ajax-filter">{{ __('Filter movies') }} <i id="ajax-filter-icon" class="hl-angle-down"></i></a>
                        </div>
                        <div id="alphabet-filter" style="float: right;display: inline-block;margin-right: 25px;"></div>
                    </div>
                </div>
                <div id="ajax-filter" class="panel-collapse collapse" aria-expanded="true" role="menu">
                    <div class="ajax"></div>
                </div>
            </div><!-- end panel-default -->

            {% include('theme::profile.sidebar') %}

            <main id="main-contents" class="col-xs-12 col-sm-12 col-md-12">
                <section>
                    <div class="section-bar clearfix">
                        <h3 class="section-title">
                            <span>{{ __('Notification') }}</span><span class="count pull-right"><i></i> item</span>
                        </h3>
                    </div>

                    <table class="table w-100">
                        <thead>
                            <tr>
                                <th width="5%">#</th>
                                <th>{{ __('Subject') }}</th>
                                <th width="20%">{{ __('Created at') }}</th>
                            </tr>
                        </thead>

                        <tbody>
                        {% for index, notification in notifications %}
                            <tr>
                                <td>{{ index + 1 }}</td>
                                <td><a href="{{ url('profile/notification/detail', [notification.id]) }}" {% if notification.read_at is empty %} style="font-weight: bold" {% endif %}>{{ notification.data['subject'] }}</a></td>
                                <td>{{ notification.created_at }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </section>


                <div class="clearfix"></div>
            </main>

        </div>
    </div>
{% endblock %}
